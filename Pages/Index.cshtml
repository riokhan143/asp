@model exercise22.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="/Forms/PolicyHolder/Create" >Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].ID)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].PolicyDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].DOB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PersonModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                <a asp-page="./Forms/Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Forms/Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
